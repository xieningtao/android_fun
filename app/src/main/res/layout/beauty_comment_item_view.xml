<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <com.basesmartframe.bitmap.rounddrawable.RoundedImageView
        android:id="@+id/pic_user_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:riv_border_color="@color/white"
        app:riv_border_width="1dp"
        app:riv_corner_radius="15dp"
        app:riv_oval="true"
        android:src="@drawable/xiao_xin"
        />

    <TextView
        android:id="@+id/pic_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pic_user_iv"
        android:layout_alignTop="@id/pic_user_iv"
        android:layout_alignBottom="@id/pic_user_iv"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:textColor="@color/lb_grey"
        android:textSize="14sp"
        android:text="name"
        />


    <TextView
        android:id="@+id/pic_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pic_user_iv"
        android:textColor="@color/text_black"
        android:text="this is comment"
        android:layout_toRightOf="@id/pic_user_iv"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/pic_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:textColor="@color/lb_grey"
        android:layout_alignTop="@id/pic_comment_name"
        android:layout_alignBottom="@id/pic_comment_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        android:text="2018-11-05"
        />


</RelativeLayout>