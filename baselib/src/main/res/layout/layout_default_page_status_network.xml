<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/common_color_F6F6F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layout_page_status_network_iv"
            android:layout_width="@dimen/dimen_empty_image_size_width"
            android:layout_height="@dimen/dimen_empty_image_size_height"
            android:layout_gravity="center"
            android:src="@drawable/ic_empty" />

        <TextView
            android:id="@+id/layout_page_status_network_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_tip_text_margin"
            android:gravity="center"
            android:text="网络突然开小差"
            android:textColor="@color/common_color_333333"
            android:textSize="@dimen/dimen_tip_text_size" />

        <TextView
            android:id="@+id/layout_page_status_network_sub_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="请点击页面刷新"
            android:textColor="@color/common_color_BBBBBB"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>