<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/common_color_F6F6F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/layout_page_status_error_iv"
            android:layout_width="@dimen/dimen_empty_image_size_width"
            android:layout_height="@dimen/dimen_empty_image_size_height"
            android:layout_gravity="center"
            android:src="@mipmap/ic_empty" />

        <TextView
            android:id="@+id/layout_page_status_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_tip_text_margin"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_gravity="center"
            android:text="暂无数据"
            android:textColor="@color/common_color_BBBBBB"
            android:textSize="@dimen/dimen_tip_text_size"
            android:layout_below="@id/layout_page_status_error_iv"
            />
    </LinearLayout>

</RelativeLayout>